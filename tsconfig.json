{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src",
		"rootDir": "./src"
	},
	"lib": ["es2015"],
	"include": ["src/**/*", "./key.map.json"],
	"exclude": ["node_modules"]
}